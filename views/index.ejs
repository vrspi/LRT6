      <div class="loader"></div>
      <audio id="preloadAudio">
        <source src="/audio/start.mp3" type="audio/mp3">
      </audio>
      
      <a class="control-btn" onclick="hideloader()">Understood</a>
    </div>

    <section class="hero">
