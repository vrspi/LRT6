      </div>
      <div class="hero-moon">
        <img
          src="/images/moon-website-export_0014_center-moon.png"
          alt="moon"
        />
      </div>
      <div class="hero-button">
        <a href="" class="control-btn">Skip</a>
        <a href="#s1" class="control-btn">Proceed</a>
      </div>
      <div class="stars"></div>
    </section>

    <section class="story" id="s1">
